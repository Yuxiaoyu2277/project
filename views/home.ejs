<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #f5f5dc;
            /* 米黄色背景 */
            font-family: 'Roboto', sans-serif;
        }

        .container {
            max-width: 600px;
            margin-top: 50px;
            background: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1,
        h2,
        h3 {
            color: #333;
            text-align: center;
            /* 调整标题的字体大小 */
            font-size: 24px;
            /* 为示例，可以根据需要调整 */
        }

        h2 {
            font-size: 20px;
            /* h2 标题的字体大小 */
        }

        h3 {
            font-size: 18px;
            /* h3 标题的字体大小 */
        }

        .centered,
        .search-result {
            margin-top: 20px;
            text-align: center;
        }

        .logout-section {
            text-align: right;
            margin-bottom: 20px;
        }

        input[type=text],
        button {
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: calc(100% - 22px);
        }

        button {
            background-color: #4a69bd;
            color: white;
            border: none;
            cursor: pointer;
        }

        button:hover {
            opacity: 0.9;
        }

        .logout-button {
            background-color: #dc3545;
            /* 红色背景 */
            color: white;
            /* 白色文字 */
            padding: 4px 8px;
            /* 更小的内边距 */
            font-size: 12px;
            /* 更小的字体大小 */
            border-radius: 4px;
            /* 圆角边框 */
            border: none;
            /* 无边框 */
            cursor: pointer;
            /* 手型光标 */
        }

        .logout-button:hover {
            opacity: 0.8;
            /* 鼠标悬浮时的透明度变化 */
        }


        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin-top: 10px;
            background-color: #f2f2f2;
            padding: 10px;
            border-radius: 5px;
        }
    </style>
    <script>
        function enableEditing(bookId) {
            document.querySelectorAll('#book-' + bookId + ' .editable').forEach(function (element) {
                element.removeAttribute('readonly');
            });
            document.getElementById('edit-button-' + bookId).style.display = 'none';
            document.getElementById('update-button-' + bookId).style.display = 'inline';
        }
    </script>
</head>

<body>
    <div class="container">
        <div class="logout-section">
            <% if (username) { %>
                <span>Welcome, <%= username %></span>
                <form action="/logout" method="post" style="display: inline;">
                    <button type="submit" class="logout-button">Logout</button>
                </form>
                <% } %>
        </div>
        <div class="centered">
            <h1>Welcome to the Home Page</h1>
            <p>Search for a book by ID, Name, or Author:</p>

            <form action="/search-book" method="get">
                <input type="text" name="bookId" placeholder="Enter book ID">
                <input type="text" name="bookName" placeholder="Enter book name">
                <input type="text" name="author" placeholder="Enter author's name">
                <button type="submit">Search</button>
            </form>

            <h2>Add a Book:</h2>
            <form action="/add-book" method="post">
                <input type="text" name="id" placeholder="Book ID" required>
                <input type="text" name="name" placeholder="Book Name" required>
                <input type="text" name="author" placeholder="Author" required>
                <button type="submit">Add</button>
            </form>
        </div>

        <% if (books && books.length> 0) { %>
            <div class="search-result">
                <h3>Search Results:</h3>
                <% if (books && books.length> 0) { %>
                    <ul>
                        <% books.forEach(function(book) { %>
                            <li id="book-<%= book.id %>">
                                <form action="/update-book/<%= book.id %>" method="post">
                                    ID: <%= book.id %>
                                        Name: <input type="text" name="name" value="<%= book.name %>" class="editable"
                                            readonly>
                                        Author: <input type="text" name="author" value="<%= book.author %>"
                                            class="editable" readonly>
                                        <!-- 编辑按钮 -->
                                        <button type="button" id="edit-button-<%= book.id %>"
                                            onclick="enableEditing('<%= book.id %>')">Edit</button>
                                        <!-- 更新按钮 -->
                                        <button type="submit" id="update-button-<%= book.id %>"
                                            style="display:none;">Update</button>
                                </form>
                                <!-- 删除按钮 -->
                                <form action="/delete-book/<%= book.id %>" method="post" style="display:inline;">
                                    <button type="submit">Delete</button>
                                </form>
                            </li>
                            <% }); %>
                    </ul>
                    <% } else { %>
                        <!-- 当没有找到书籍时显示的信息 -->
                        <p>
                            <%= message %>
                        </p>
                        <% } %>
            </div>
            <% } %>


    </div>
</body>

</html>